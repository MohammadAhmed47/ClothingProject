
@{
    ViewBag.Title = "ShowAllCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTable thead .sorting:after, .dataTable thead .sorting:before, .dataTable thead .sorting_asc:after, .dataTable thead .sorting_asc_disabled:after, .dataTable thead .sorting_desc:after, .dataTable thead .sorting_desc_disabled:after {
        display: none !important;
    }
</style>
<!-- Page header -->
<div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><span class="font-weight-semibold">Category</span> - All Categories</h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="index.html" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Category</a>
                <span class="breadcrumb-item active">All Categories</span>
            </div>

            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>
<!-- /page header -->

<div class="content">
    <div id="modal_theme_danger" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <form action="@Url.Action("PostDeleteCategory", "Category")" method="post">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-center">
                        <h3 class="modal-title text-center">Warning</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        <input type="hidden" id="Id" name="Id" />
                        @* <h6 class="font-weight-semibold">Text in a modal</h6>*@
                        <p>Do Your Really Want to Delete</p>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>

                            <input type="submit" value="Delete" class="btn btn-danger">


                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


    <div class="row">
        <div class="col-md-3 col-sm-12 col-xs-12"></div>
        <div class="col-md-6 col-sm-12 col-xs-12">
            @if (ViewBag.msgs != "")
            {
                <div class="alert bg-success text-white alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                    <span class="font-weight-semibold">@ViewBag.msgs</span>
                </div>
            }
            else
            {
                if (ViewBag.ermsg != "")
                {
                    <div class="alert bg-danger text-white alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                        <span class="font-weight-semibold">@ViewBag.ermsg</span>
                    </div>
                }
            }
        </div>
        <div class="col-md-3 col-sm-12 col-xs-12"></div>
    </div>


    <!-- Content area -->
    <div class="content">

        <!-- HTML sourced data -->
        <div class="card">

            <table class="table text-center" id="example">
                <thead>
                    <tr>
                        <th>Name</th>
                        @*<th>Email</th>
                            <th>Phone</th>
                            <th>Username</th>
                            <th>Password</th>*@
                        @*<th>Address</th>*@
                        @*<th>Image</th>*@
                        <th class="text-center" colspan="2">Actions</th>
                    </tr>
                </thead>
                @*<tbody>
                        @foreach (var x in ViewBag.user)
                        {
                        <tr>
                            <td class="text-capitalize" value="@x.Id">@x.Name</td>
                            <td class="text-capitalize">@x.Email</td>
                            <td class="text-capitalize">@x.Phone</td>
                            <td class="text-capitalize">@x.Username</td>
                            <td class="text-capitalize">@x.Password</td>
                            <td class="text-capitalize">@x.Balance</td>
                            <td class="text-center">
                                <button class="btn btn-sm  btn-danger" onclick="deleteuser(@x.Id)"> Delete </button>
                            </td>
                            <td class="text-center">
                                <form action="@Url.Action("UpdateUser", "Admin")" method="post">
                                    <input type="submit" value="Update" class="btn btn-success btn-block">
                                    <input type="hidden" name="Id" value="@x.Id" />
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>*@
            </table>
        </div>
        <!-- /HTML sourced data -->

    </div>
    <!-- /content area -->
    <script>
    $(document).ready(function () {
            $('#example').DataTable(
                {
                    buttons: {
                        dom: {
                            button: {
                                className: 'btn btn-light'
                            }
                        },
                        buttons: [
                            {
                                extend: 'csv',
                                exportOptions: {
                                    columns: [0, ':visible']
                                }
                            }
                        ]
                    },
                    "ajax": {
                        "url": '@Url.Action("AllCategories", "Category")',
                        "data": {},
                        "type": "POST",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "Name", "name": "Name" },
                        //{ "data": "Email", "name": "Email" },
                        //{ "data": "Phone", "name": "Phone" },
                        //{ "data": "Username", "name": "Username" },
                        //{ "data": "Password", "name": "Password" },
                        //{ "data": "Address", "name": "Address" },
                        { "data": "Id", "name": "Id" },
                    ],
                    'columnDefs': [
                        {
                            render: function (data, type, full, meta) {
                                return '<a class="btn btn-sm  bg-secondary" href="../Category/UpdateCategory?Id=' + full.Id + '"> Update </a>' +
                                    ' <button class="btn btn-sm  btn-danger" onclick="deletecategory(' + full.Id + ')"> Delete </button>';
                            },
                            targets: 1
                        }
                    ],
                    "serverSide": "true",
                    "order": [0, "asc"],
                    "processing": "true",
                    "language":
                    {
                        "processing": "Processing... Please wait"
                    },
                })
        //}
    });
    </script>



    <script>
        function deletecategory(Id) {
            $("#Id").val(Id);
            $("#modal_theme_danger").modal('show');
        }
    </script>
</div>

