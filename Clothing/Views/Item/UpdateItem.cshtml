
@{
    ViewBag.Title = "UpdateItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Clothing.Models ;
@using Clothing.BL ;
<!-- Page header -->
<div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><span class="font-weight-semibold">Item</span> - All Items</h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Item</a>
                <span class="breadcrumb-item active">All Items</span>
            </div>

            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>
<!-- /page header -->

<div class="content">
    @model Clothing.Models.Item

    @{
        //Get the current claims principal
        var identity = (System.Security.Claims.ClaimsPrincipal)System.Threading.Thread.CurrentPrincipal;

        var id = identity.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Sid)
        .Select(c => c.Value).SingleOrDefault();

        Clothing.Models.User user = new Clothing.BL.UserBL().GetUserbyId(Convert.ToInt32(id));
    }


    <form action="@Url.Action("PostUpdateItem", "Item")" class="flex-fill" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            @*<i class="icon-plus3 icon-2x text-success border-success border-3 rounded-round p-3 mb-3 mt-1"></i>*@
                            <img src="~/Content/global_assets/images/item icon.png" class="rounded-round border-3 p-3 mt-1" style="width:100px; height:100px" />                            <h5 class="mb-0">Update Item</h5>
                        </div>
                        <input type="hidden" name="Id" value="@Model.Id" />

                        <div class="form-group form-group-feedback form-group-feedback-right">
                            <input type="text" class="form-control" placeholder="ItemName" name="ItemName" value="@Model.ItemName" required>
                            <div class="form-control-feedback">
                                <img src="~/Content/global_assets/images/item icon.png" class="rounded-round" style="width:20px; height:20px" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Brand" name="Brand" value="@Model.Brand" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/brand icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Color" name="Color" value="@Model.Color" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/color icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Size" name="Size" value="@Model.Size" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/size icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Fit" name="Fit" value="@Model.Fit" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/fit icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Material" name="Material" value="@Model.Material" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/material icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Notes" name="Notes" value="@Model.Notes" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/notes icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Care Instructions" name="Careinstructions" value="@Model.Careinstructions" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/care instructions icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="text" class="form-control" placeholder="Store Item Number" name="StoreItemNumber" value="@Model.StoreItemNumber" required>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/store item number.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>

                        </div>



                        <div class="row">
                            <div class="col-md-12">
                                <!--ye raha categories ka dropdown-->
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <select class="form-control" name="CategoriesId" required>
                                        <option>Select Category</option>
                                        @foreach (var x in ViewBag.categories)
                                        {
                                            if (x.SubCategory != 0 && x.SubCategory != null)
                                            {

                                                Category cat = new CategoriesBL().GetCategorybyId(x.SubCategory);
                                                if (cat != null)
                                                {
                                                    if (cat.SubCategory != null && cat.SubCategory != 0)
                                                    {
                                                        Category cat2 = new CategoriesBL().GetCategorybyId((int)cat.SubCategory);
                                                        <option value="@x.Id">@cat2.Name-@cat.Name-@x.Name</option>

                                                    }
                                                    else
                                                    {
                                                        <option value="@x.Id">@cat.Name-@x.Name</option>

                                                    }
                                                }

                                            }
                                        }
                                    </select>
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/category icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input type="file" class="form-control" placeholder="Identity Document1" name="Document1" accept="image/*">
                                    <div class="form-control-feedback">
                                        <img src="~/Content/global_assets/images/image icon.png" class="rounded-round" style="width:20px; height:20px" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <input type="submit" class="btn bg-success btn-labeled" value="Update Item" style="background:#51a49a">
                    </div>
                </div>
            </div>
        </div>
    </form>


    <script>
        function isInputNumber(evt) {
            var ch = String.fromCharCode(evt.which);
            if (!(/[0-9]/.test(ch))) {
                evt.preventDefault();
            }
        }
    </script>
</div>

